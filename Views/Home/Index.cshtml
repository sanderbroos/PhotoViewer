@using Newtonsoft.Json
@using PhotoViewer.Data
@model PhotosModel
@{
	ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4 page-title">Sander Broos Photography</h1>
</div>

<div class="d-flex justify-content-center gap-4">
	<button id="myButton2023" class="btn btn-info">2023</button>
	<button id="myButton2024" class="btn btn-info">2024</button>
</div>

<div id="myImageGrid" class="image-grid">
</div>

<div id="myImageItemTemplate" style="display: none">
	@*<div class="image-item"> *@
		<img/>
	@*</div> *@
</div>

<div id="fullSizeImageContainer">
	<img id="fullSizeImage" src="https://cdn.myportfolio.com/daed2eb3-8b71-4138-becb-64df2093a364/120780e1-f390-416c-acb2-a4be5c8428e6_rw_1920.jpg?h=7515e979348fcda03e9fdbfecec71278" />
</div>

@section Scripts {
	<script src="js/Gallery.js"></script>
	<script>
		var theGallery;
		$(document).ready(function () {
			theGallery = new Gallery(@Html.Raw(JsonConvert.SerializeObject(Model.Photos)));
		});
	</script>
}
